{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build active file",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilateurÂ : g++"
		},
		{
			"label": "build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-I${workspaceFolder}/src/battleroyale/headers",
				"-I${workspaceFolder}/src/fighters/headers",
				"-g",
				"${workspaceFolder}/src/battleroyale/*.cpp",
				"-g",
				"${workspaceFolder}/src/fighters/*.cpp",
				"-g",
				"${workspaceFolder}/src/main.cpp",
				"-o",
				"${workspaceFolder}/bin/battleroyale"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}